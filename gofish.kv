#:kivy 2.3.0

<MainMenu>:
    md_bg_color: self.theme_cls.backgroundColor
    MDFloatLayout:
        Image:
            source: "Icon.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
        MDLabel:
            width: root.width
            height: root.height*0.3
            text: "Go Fish!"
            font_style: "cataway"
            role: "large"
            pos_int: {"center_x": 0.5, "center_y": 0.8}
        MDBoxLayout:
            orientation: 'vertical'
            pos_int: {"center_x": 0.5, "center_y": 0.3}
            MDButton:
                style: "tonal"
                on_release: root.manager.current = "Settings"


<InGame>:
   
<Rules>:

<Settings>:
    md_bg_color: self.theme_cls.backgroundColor
    MDFloatLayout:
        width: root.width
        height: root.height
        MDButton:
            style: "filled"
            on_release: app.theme_cls.switch_theme()
            MDButtonText:
                text: "Change Theme"