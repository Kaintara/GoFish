#:kivy 2.3.0

<MainMenu>:
    canvas.before:
        Color: 
            rgba: 0.56, 0.79, 0.79, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Button:
            size_hint: 0.5, 0.3
            text: "Go to Settings"
            on_release: root.manager.current = "Settings"
        Button:
            size_hint: 0.5, 0.3
            text: "Go to InGame"
            on_release: root.manager.current = "InGame"

<InGame>:
    BoxLayout:
        Label:
            text: "In Game Screen"
        Button:
            text: "Back to Menu"
            on_release: root.manager.current = "Menu"

<Settings>:
    FloatLayout:
        Button:
            text: "Back to Menu"
            size_hint: 0.4, 0.15
            pos_hint: {"center_x": 0.5, "y": 0.6}
            on_release: root.manager.current = "Menu"
        Label:
            text: "Change theme"
            pos_hint: {"center_x": 0.5, "y": 0.4}